{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./src",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@context/*": ["context/*"]
    },
    "types": ["node"]
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
